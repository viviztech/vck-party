# =============================================================================
# VCK Frontend Production Environment Variables (Azure Static Web Apps)
# Copy this file to .env.local for local development
# =============================================================================

# API Configuration - Point to your Azure App Service backend
VITE_API_URL=https://<your-app-service-name>.azurewebsites.net/api/v1
VITE_WS_URL=wss://<your-app-service-name>.azurewebsites.net/ws

# Application Configuration
VITE_APP_NAME=VCK Platform
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=true

# Authentication
VITE_TOKEN_KEY=vck_auth_token
VITE_REFRESH_TOKEN_KEY=vck_refresh_token

# Third Party Services (Optional)
# VITE_GA_TRACKING_ID=
# VITE_SENTRY_DSN=
