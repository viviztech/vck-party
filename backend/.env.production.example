# =============================================================================
# VCK Backend Production Environment Variables (Azure App Service)
# Copy this file to .env and fill in the values
# =============================================================================

# Application
APP_NAME=VCK Political Party Management
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# API
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=*
CORS_ORIGINS=https://<your-static-web-app-name>.azurewebsites.net

# PostgreSQL Database (Azure Database for PostgreSQL - Flexible Server)
POSTGRES_HOST=<your-postgres-server>.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_USER=<your-username>@<your-postgres-server>
POSTGRES_PASSWORD=<your-password>
POSTGRES_DB=vck_db

# MongoDB (Azure Cosmos DB with MongoDB API)
MONGODB_HOST=<your-cosmos-account>.mongo.cosmos.azure.com
MONGODB_PORT=10255
MONGODB_USER=<your-username>
MONGODB_PASSWORD=<your-password>
MONGODB_DB=vck_analytics

# Redis (Azure Cache for Redis - Basic tier)
REDIS_HOST=<your-redis-name>.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=<your-primary-key>
REDIS_DB=0

# JWT Authentication - IMPORTANT: Generate a strong secret key
JWT_SECRET_KEY=<generate-a-strong-random-string-here>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60

# SMS Provider (Optional - for production notifications)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=<your-account-sid>
TWILIO_AUTH_TOKEN=<your-auth-token>
TWILIO_PHONE_NUMBER=<your-twilio-phone>

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>

# AWS Settings (Optional - for S3 file storage)
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_REGION=ap-south-1
AWS_S3_BUCKET=<your-s3-bucket-name>

# Email Settings (Optional - for email notifications)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=<your-email>
SMTP_PASSWORD=<your-email-password>
EMAIL_FROM=noreply@<your-domain>.com

# Razorpay (Optional - for donations)
RAZORPAY_KEY_ID=<your-razorpay-key>
RAZORPAY_KEY_SECRET=<your-razorpay-secret>

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,image/jpeg,image/png

# Celery (Optional - for background tasks)
CELERY_BROKER_URL=redis://:<your-redis-primary-key>@<your-redis-name>.redis.cache.windows.net:6380/0

# Sentry (Optional - for error tracking)
SENTRY_DSN=<your-sentry-dsn>

# Logging
LOG_LEVEL=INFO
