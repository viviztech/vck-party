# VCK Political Party Management - Environment Variables

# Application
APP_NAME="VCK Political Party Management"
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=vck_user
POSTGRES_PASSWORD=vck_password
POSTGRES_DB=vck_db

# MongoDB Database
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=vck_analytics

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY=test-secret-key-for-development
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60

# Logging
LOG_LEVEL=INFO
